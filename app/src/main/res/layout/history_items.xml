<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <androidx.cardview.widget.CardView
        android:layout_width="347dp"
        android:layout_height="103dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/splash_wine" />

            <TextView
                android:id="@+id/dish_resturant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/yeonsung_regular"
                android:text="tyagi resturent"
                android:textColor="#575151"
                app:layout_constraintEnd_toEndOf="@+id/dish_name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dish_name"
                app:layout_constraintTop_toBottomOf="@+id/dish_name" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus_btn"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_bckgrnd"
                android:text="Buy Again"
                app:layout_constraintBottom_toBottomOf="@+id/dish_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.826"
                app:layout_constraintStart_toEndOf="@+id/dish_resturant"
                app:layout_constraintTop_toTopOf="@+id/dish_image"
                app:layout_constraintVertical_bias="0.523" />

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/lato_bold"
                android:text="Momos"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/dish_image"
                app:layout_constraintStart_toEndOf="@+id/dish_image"
                app:layout_constraintTop_toTopOf="@+id/dish_image"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/lato_bold"
                android:text="â‚¹230"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dish_resturant"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dish_resturant"
                app:layout_constraintTop_toBottomOf="@+id/dish_resturant" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>